    <script>
        // Global variables
        let currentSlide = 1;
        let totalSlides = 5;
        let score = 0;
        let processedData = [];

        // Page navigation
        function showPage(pageId) {
            const pages = document.querySelectorAll('.page-content');
            pages.forEach(page => page.classList.add('hidden'));
            document.getElementById(pageId === 'home' ? 'home-page' : pageId).classList.remove('hidden');
        }

        function goHome() {
            showPage('home');
        }

        // Slide functionality
        function nextSlide() {
            if (currentSlide < totalSlides) {
                const currentSlideEl = document.querySelector(`[data-slide="${currentSlide}"]`);
                const nextSlideEl = document.querySelector(`[data-slide="${currentSlide + 1}"]`);
                
                currentSlideEl.classList.remove('slide-active');
                currentSlideEl.classList.add('slide-exit');
                
                nextSlideEl.classList.remove('slide-enter');
                nextSlideEl.classList.add('slide-active');
                
                currentSlide++;
                updateSlideCounter();
            }
        }

        function prevSlide() {
            if (currentSlide > 1) {
                const currentSlideEl = document.querySelector(`[data-slide="${currentSlide}"]`);
                const prevSlideEl = document.querySelector(`[data-slide="${currentSlide - 1}"]`);
                
                currentSlideEl.classList.remove('slide-active');
                currentSlideEl.classList.add('slide-enter');
                
                prevSlideEl.classList.remove('slide-exit');
                prevSlideEl.classList.add('slide-active');
                
                currentSlide--;
                updateSlideCounter();
            }
        }

        function updateSlideCounter() {
            document.getElementById('slide-counter').textContent = `${currentSlide} / ${totalSlides}`;
        }

        // Drag and Drop functionality
        function initializeDragAndDrop() {
            const dragItems = document.querySelectorAll('.drag-item');
            const dropZones = document.querySelectorAll('.drop-zone');

            dragItems.forEach(item => {
                item.addEventListener('dragstart', handleDragStart);
                item.addEventListener('dragend', handleDragEnd);
            });

            dropZones.forEach(zone => {
                zone.addEventListener('dragover', handleDragOver);
                zone.addEventListener('dragenter', handleDragEnter);
                zone.addEventListener('dragleave', handleDragLeave);
                zone.addEventListener('drop', handleDrop);
            });
        }

        function handleDragStart(e) {
            e.dataTransfer.setData('text/plain', e.target.dataset.component);
            e.target.style.opacity = '0.5';
        }

        function handleDragEnd(e) {
            e.target.style.opacity = '1';
        }

        function handleDragOver(e) {
            e.preventDefault();
        }

        function handleDragEnter(e) {
            e.preventDefault();
            e.target.classList.add('drag-over');
        }

        function handleDragLeave(e) {
            e.target.classList.remove('drag-over');
        }

        function handleDrop(e) {
            e.preventDefault();
            const draggedComponent = e.dataTransfer.getData('text/plain');
            const targetComponent = e.target.dataset.target;
            
            e.target.classList.remove('drag-over');
            
            if (draggedComponent === targetComponent) {
                e.target.classList.add('correct-drop');
                e.target.innerHTML = `<span class="text-green-700 font-bold">✓ ${getDragItemText(draggedComponent)}</span>`;
                
                // Hide the dragged item
                const draggedItem = document.querySelector(`[data-component="${draggedComponent}"]`);
                draggedItem.style.display = 'none';
                
                score++;
                document.getElementById('score').textContent = score;
                
                if (score === 8) {
                    document.getElementById('success-message').classList.remove('hidden');
                }
            } else {
                // Wrong drop - show feedback
                e.target.style.backgroundColor = '#fee2e2';
                e.target.style.borderColor = '#dc2626';
                setTimeout(() => {
                    e.target.style.backgroundColor = '';
                    e.target.style.borderColor = '#d1d5db';
                }, 1000);
            }
        }

        function getDragItemText(component) {
            const texts = {
                'cpu': '🔲 CPU (Processor)',
                'ram': '📊 RAM Memory',
                'gpu': '🎮 Graphics Card',
                'ssd': '💾 SSD Storage',
                'motherboard': '🔌 Motherboard',
                'psu': '⚡ Power Supply',
                'cooler': '🌀 CPU Cooler',
                'case': '📦 PC Case'
            };
            return texts[component];
        }

        function resetDragGame() {
            score = 0;
            document.getElementById('score').textContent = score;
            document.getElementById('success-message').classList.add('hidden');
            
            // Reset all drag items
            const dragItems = document.querySelectorAll('.drag-item');
            dragItems.forEach(item => {
                item.style.display = 'block';
            });
            
            // Reset all drop zones
            const dropZones = document.querySelectorAll('.drop-zone');
            dropZones.forEach(zone => {
                zone.classList.remove('correct-drop');
                zone.style.backgroundColor = '';
                zone.style.borderColor = '#d1d5db';
                const originalTexts = {
                    'cpu': 'Otak komputer',
                    'ram': 'Memori sementara',
                    'gpu': 'Pengolah grafis',
                    'ssd': 'Penyimpanan cepat',
                    'motherboard': 'Papan induk',
                    'psu': 'Sumber daya',
                    'cooler': 'Pendingin CPU',
                    'case': 'Wadah komponen'
                };
                zone.innerHTML = `<span class="text-gray-500">${originalTexts[zone.dataset.target]}</span>`;
            });
        }

        // Computer simulation functions
        function processInput() {
            const input = document.getElementById('user-input').value;
            if (!input.trim()) {
                alert('Silakan masukkan data terlebih dahulu!');
                return;
            }

            // Show processing animation
            const processingArea = document.getElementById('processing-area');
            processingArea.innerHTML = `
                <div class="text-center">
                    <div class="pulse-animation text-2xl mb-2">⚙️</div>
                    <div>CPU sedang memproses: "${input}"</div>
                    <div class="text-sm text-gray-600 mt-2">Menganalisis data, mengkonversi, dan memproses...</div>
                </div>
            `;

            // Simulate processing delay
            setTimeout(() => {
                // Store data
                const timestamp = new Date().toLocaleTimeString();
                processedData.push({input, timestamp});
                updateStorageArea();

                // Show output
                const outputArea = document.getElementById('output-area');
                outputArea.innerHTML = `
                    <div class="text-center">
                        <div class="text-2xl mb-2">📤</div>
                        <div class="font-bold">Hasil Pemrosesan:</div>
                        <div class="bg-green-100 p-3 rounded mt-2">
                            Input: "${input}"<br>
                            Panjang: ${input.length} karakter<br>
                            Diproses pada: ${timestamp}
                        </div>
                    </div>
                `;

                // Clear input
                document.getElementById('user-input').value = '';
            }, 2000);
        }

        function updateStorageArea() {
            const storedDataEl = document.getElementById('stored-data');
            storedDataEl.innerHTML = processedData.map((data, index) => `
                <div class="bg-purple-100 p-2 rounded text-sm">
                    ${index + 1}. "${data.input}" - ${data.timestamp}
                </div>
            `).join('');
        }

        function simulateCalculation() {
            document.getElementById('user-input').value = '15 + 25';
            
            setTimeout(() => {
                const processingArea = document.getElementById('processing-area');
                processingArea.innerHTML = `
                    <div class="text-center">
                        <div class="pulse-animation text-2xl mb-2">🧮</div>
                        <div>CPU menghitung: 15 + 25</div>
                        <div class="text-sm text-gray-600 mt-2">ALU (Arithmetic Logic Unit) bekerja...</div>
                    </div>
                `;

                setTimeout(() => {
                    const outputArea = document.getElementById('output-area');
                    outputArea.innerHTML = `
                        <div class="text-center">
                            <div class="text-2xl mb-2">🎯</div>
                            <div class="font-bold">Hasil Kalkulasi:</div>
                            <div class="bg-green-100 p-3 rounded mt-2 text-2xl font-bold">
                                15 + 25 = 40
                            </div>
                        </div>
                    `;
                }, 1500);
            }, 500);
        }

        function simulateTextProcessing() {
            document.getElementById('user-input').value = 'Sistem Komputer';
            
            setTimeout(() => {
                const processingArea = document.getElementById('processing-area');
                processingArea.innerHTML = `
                    <div class="text-center">
                        <div class="pulse-animation text-2xl mb-2">📝</div>
                        <div>CPU memproses teks: "Sistem Komputer"</div>
                        <div class="text-sm text-gray-600 mt-2">Menganalisis karakter, encoding, formatting...</div>
                    </div>
                `;

                setTimeout(() => {
                    const outputArea = document.getElementById('output-area');
                    outputArea.innerHTML = `
                        <div class="text-center">
                            <div class="text-2xl mb-2">📋</div>
                            <div class="font-bold">Hasil Analisis Teks:</div>
                            <div class="bg-green-100 p-3 rounded mt-2">
                                <div>Teks: "Sistem Komputer"</div>
                                <div>Jumlah karakter: 15</div>
                                <div>Jumlah kata: 2</div>
                                <div>Huruf kapital: S, K</div>
                            </div>
                        </div>
                    `;
                }, 1500);
            }, 500);
        }

        function clearSimulation() {
            document.getElementById('user-input').value = '';
            document.getElementById('processing-area').innerHTML = `
                <div class="text-center text-gray-500">
                    CPU siap memproses data...
                </div>
            `;
            document.getElementById('output-area').innerHTML = `
                <div class="text-center text-gray-500">
                    Hasil pemrosesan akan ditampilkan di sini...
                </div>
            `;
            document.getElementById('stored-data').innerHTML = '';
            processedData = [];
        }

        // Initialize everything when page loads
        document.addEventListener('DOMContentLoaded', function() {
            initializeDragAndDrop();
        });
    </script>
